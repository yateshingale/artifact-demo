pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Compiling the code...'
                sh 'mkdir -p output'
                sh 'echo "Build artifact content" > output/artifact.txt'
            }
        }

        stage('Archive Artifact') {
            steps {
                archiveArtifacts artifacts: 'output/*.txt', fingerprint: true
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace...'
            deleteDir()
        }
    }
}

